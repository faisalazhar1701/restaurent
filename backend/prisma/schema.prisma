// Restaurant QR ordering â€” production schema (PostgreSQL only)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  guest
  admin
}

enum TableStatus {
  available
  occupied
  disabled
}

model User {
  id        String   @id @default(cuid())
  role      UserRole
  createdAt DateTime @default(now())
  sessions  Session[]
}

enum OrderStatus {
  draft
  placed
  cancelled
}

enum PaymentStatus {
  pending
  paid
  failed
}

model Session {
  id                   String    @id @default(cuid())
  userId               String
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tableNumber          Int?
  guestCount           Int?
  expiresAt            DateTime
  endedAt              DateTime?
  createdAt            DateTime  @default(now())
  seatedAt             DateTime? // when table assigned
  paymentCompletedAt   DateTime? // when order paid
  orders               Order[]
}

model Order {
  id                    String        @id @default(cuid())
  sessionId             String
  session               Session       @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  tableNumber           Int?
  status                OrderStatus   @default(draft)
  paymentStatus         PaymentStatus?
  stripeCheckoutSessionId String?
  stripePaymentIntentId String?
  createdAt             DateTime      @default(now())
  items                 OrderItem[]
}

model OrderItem {
  id           String   @id @default(cuid())
  orderId      String
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId   String
  menuItem     MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  quantity     Int
  priceAtOrder Decimal  @db.Decimal(10, 2)
}

model RestaurantTable {
  id          String      @id @default(cuid())
  tableNumber Int
  zone        String?
  capacity    Int         @default(4)
  status      TableStatus @default(available)
}

model Restaurant {
  id        String         @id @default(cuid())
  name      String
  isActive  Boolean        @default(true)
  categories MenuCategory[]
  menuItems  MenuItem[]
  rewards   Reward[]
}

model MenuCategory {
  id           String     @id @default(cuid())
  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  name         String
  orderIndex   Int        @default(0)
  isActive     Boolean    @default(true)
  items        MenuItem[]
}

model MenuItem {
  id           String       @id @default(cuid())
  restaurantId String?
  restaurant   Restaurant?   @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  categoryId   String
  category     MenuCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  name         String
  description  String?
  price        Decimal      @db.Decimal(10, 2)
  isActive     Boolean      @default(true)
  orderItems   OrderItem[]
}

model Reward {
  id           String      @id @default(cuid())
  title        String
  description  String?
  restaurantId String?
  restaurant   Restaurant?  @relation(fields: [restaurantId], references: [id], onDelete: SetNull)
  isActive     Boolean     @default(true)
}
